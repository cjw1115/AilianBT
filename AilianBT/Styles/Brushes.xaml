<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  整体主色调，适用于大标题背景，小标题前景  -->
    <SolidColorBrush x:Key="AilianBtMainColor" Color="#FFE777AB" />
    <SolidColorBrush x:Key="AilinaBtItemHoverColor" Color="#FFE7ADC8" />
    <SolidColorBrush x:Key="AilinaBtItemSelectColor" Color="#FFAE517D" />
    <!--  未选中标题  -->
    <SolidColorBrush x:Name="AilianBtTitleUnselectForeground" Color="#FF7F7E7D" />
    <!--  大标题前景色  -->
    <SolidColorBrush x:Key="AilianBtTitleForeground" Color="#FFEDEDED" />
    <!--  大块区域主体背景色  -->
    <SolidColorBrush x:Key="AilianBtGridBackground" Color="#FFD7EDF9" />
    <SolidColorBrush x:Key="AilianBtGridBackground2" Color="AliceBlue" />
    <!--  资源列表标题色彩  -->
    <SolidColorBrush x:Key="AilianBtListMainForeground" Color="#FF050505" />
    <SolidColorBrush x:Key="AilianBtListOtherForeground" Color="#FF949494" />

    <AcrylicBrush x:Key="NavigationBackgroundAcrylicBrush"
                  BackgroundSource="HostBackdrop"
                  FallbackColor="#FFF2F2F2"
                  TintOpacity="0.7" />
    <SolidColorBrush x:Key="NavigationItemHoverBrush" Color="#44A5A5A5" />
</ResourceDictionary>
