        <DataTemplate x:Key="NormalDataTemplate" x:DataType="models:DownloadInfo">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Width="44" Stretch="Uniform" Source="{x:Bind Thumb,Mode=OneWay,Converter={StaticResource bytesToImageSouceConverter}}"></Image>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="tbTitle" TextWrapping="Wrap"  Text="{x:Bind FileName}"></TextBlock>
                    <Grid Grid.Row="0" Grid.Column="1" >
                        <Button VerticalAlignment="Top" Width="30" Height="30" x:Name="btnControl" FontFamily="Segoe MDL2 Assets" Content="{x:Bind DownloadStatus,Mode=OneWay,Converter={StaticResource downloadStatusToIconConverter}}" Tag="{x:Bind ID,Mode=OneWay}"  RelativePanel.AlignTopWithPanel="True" RelativePanel.LeftOf="btnDelete" Click="btnControl_Click"/>
                    </Grid>
                    <ProgressBar Grid.Row="1" Grid.ColumnSpan="2" Foreground="{StaticResource AilianBtMainColor}" x:Name="progressBar"  Value="{x:Bind FinishedPercent,Mode=OneWay}"  Maximum="100"></ProgressBar>
                    <Grid Grid.Row="2" Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" x:Name="tbProgress" FontSize="12" >
                                        <Run Text="{x:Bind ReceivedBytes,Mode=OneWay,Converter={StaticResource dataSizeConverter}}"></Run>
                                        <Run Text="/"></Run>
                                        <Run Text="{x:Bind TotalToReceive,Mode=OneWay,Converter={StaticResource dataSizeConverter}}"></Run>
                        </TextBlock>
                        <TextBlock FontSize="12"  Grid.Column="1">
                                        <Run Text="{x:Bind FinishedPercent,Mode=OneWay}"></Run>
                                        <Run Text="%"></Run>
                        </TextBlock>
                    </Grid>

                </Grid>

            </Grid>

        </DataTemplate>
        <Style TargetType="Button">
            
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Grid x:Name="RootGrid" Background="Transparent">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup>
                                    <VisualState x:Name="Normal"></VisualState>
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="ContentPresenter">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="White"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="RootGrid">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource AilianBtMainColor}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="ContentPresenter">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="White"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="RootGrid">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource AilianBtMainColor}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter x:Name="ContentPresenter" Foreground="{StaticResource AilianBtMainColor}" VerticalContentAlignment="Center" HorizontalAlignment="Center"   ></ContentPresenter>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height=" auto"/>
        </Grid.RowDefinitions>
        <Grid Background="{StaticResource AilianBtGridBackground2}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height=" auto"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            
            <TextBox x:Name="tbUri" InputScope="Url" BorderThickness="1" Margin="4,4,4,0"
                     BorderBrush="{StaticResource AilianBtMainColor}"></TextBox>
            <Button x:Name="btnAdd"  Grid.Row="1" Margin="4,4,4,4" Content="添加到下载列表" HorizontalAlignment="Stretch" Click="btnAdd_Click"></Button>
            <ListView Grid.Row="2" x:Name="downList" ItemsSource="{x:Bind DownloadingVM.DownloadOperations,Mode=OneWay}"
                     ItemTemplate="{StaticResource NormalDataTemplate}"
                     IsItemClickEnabled="False"
                     
                      SelectionChanged="downList_SelectionChanged">
            </ListView>
        </Grid>
        <CommandBar Grid.Row="1" Style="{StaticResource AilianBtCommandBar}"  HorizontalAlignment="Stretch" >
            <AppBarButton Foreground="White"  Icon="Download" IsEnabled="{x:Bind DownloadingVM.IsEnableStart,Mode=OneWay}" Label="开始" Click="btnStart_Click"></AppBarButton>
            <AppBarButton Foreground="White"  Icon="Pause" IsEnabled="{x:Bind DownloadingVM.IsEnablePause,Mode=OneWay}" Label="暂停" Click="btnPause_Click"></AppBarButton>
            <AppBarButton Foreground="White"  Icon="Delete" IsEnabled="{x:Bind DownloadingVM.IsEnableRemove,Mode=OneWay}" Label="移除" Click="btnRemove_Click"></AppBarButton>
            <AppBarButton Foreground="White"  Icon="SelectAll"  Label="选择" x:Name="btnSelectAll" Click="btnSelectAll_Click"></AppBarButton>
        </CommandBar>
    </Grid>
    
</Page>
