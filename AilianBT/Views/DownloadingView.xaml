        <DataTemplate x:Key="NormalDataTemplate" x:DataType="models:DownloadInfo">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0"
                       Width="44"
                       Source="{x:Bind Thumb, Mode=OneWay, Converter={StaticResource bytesToImageSouceConverter}}"
                       Stretch="Uniform" />
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="tbTitle"
                               Text="{x:Bind FileName}"
                               TextWrapping="Wrap" />
                    <Grid Grid.Row="0" Grid.Column="1">
                        <Button x:Name="btnControl"
                                Width="30"
                                Height="30"
                                VerticalAlignment="Top"
                                Click="btnControl_Click"
                                Content="{x:Bind DownloadStatus, Mode=OneWay, Converter={StaticResource downloadStatusToIconConverter}}"
                                FontFamily="Segoe MDL2 Assets"
                                RelativePanel.AlignTopWithPanel="True"
                                RelativePanel.LeftOf="btnDelete"
                                Tag="{x:Bind ID, Mode=OneWay}" />
                    </Grid>
                    <ProgressBar x:Name="progressBar"
                                 Grid.Row="1"
                                 Grid.ColumnSpan="2"
                                 Foreground="{StaticResource AilianBtMainColor}"
                                 Maximum="100"
                                 Value="{x:Bind FinishedPercent, Mode=OneWay}" />
                    <Grid Grid.Row="2" Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="tbProgress"
                                   Grid.Column="0"
                                   FontSize="12">
                            <Run Text="{x:Bind ReceivedBytes, Mode=OneWay, Converter={StaticResource dataSizeConverter}}" />
                            <Run Text="/" />
                            <Run Text="{x:Bind TotalToReceive, Mode=OneWay, Converter={StaticResource dataSizeConverter}}" />
                        </TextBlock>
                        <TextBlock Grid.Column="1" FontSize="12">
                            <Run Text="{x:Bind FinishedPercent, Mode=OneWay}" />
                            <Run Text="%" />
                        </TextBlock>
                    </Grid>

                </Grid>

            </Grid>

        </DataTemplate>
        <Style TargetType="Button">

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Grid x:Name="RootGrid" Background="Transparent">
                            <ContentPresenter x:Name="ContentPresenter"
                                              HorizontalAlignment="Center"
                                              VerticalContentAlignment="Center"
                                              Foreground="{StaticResource AilianBtMainColor}" />
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup>
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="White" />
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootGrid" Storyboard.TargetProperty="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource AilianBtMainColor}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="White" />
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootGrid" Storyboard.TargetProperty="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource AilianBtMainColor}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height=" auto" />
        </Grid.RowDefinitions>
        <Grid Background="{StaticResource AilianBtGridBackground2}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height=" auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBox x:Name="tbUri"
                     Margin="4,4,4,0"
                     BorderBrush="{StaticResource AilianBtMainColor}"
                     BorderThickness="1"
                     InputScope="Url" />
            <Button x:Name="btnAdd"
                    Grid.Row="1"
                    Margin="4,4,4,4"
                    HorizontalAlignment="Stretch"
                    Click="btnAdd_Click"
                    Content="添加到下载列表" />
            <ListView x:Name="downList"
                      Grid.Row="2"
                      IsItemClickEnabled="False"
                      ItemTemplate="{StaticResource NormalDataTemplate}"
                      ItemsSource="{x:Bind DownloadingVM.DownloadOperations, Mode=OneWay}"
                      SelectionChanged="downList_SelectionChanged" />
        </Grid>
        <CommandBar Grid.Row="1"
                    HorizontalAlignment="Stretch"
                    Style="{StaticResource AilianBtCommandBar}">
            <AppBarButton Click="btnStart_Click"
                          Foreground="White"
                          Icon="Download"
                          IsEnabled="{x:Bind DownloadingVM.IsEnableStart, Mode=OneWay}"
                          Label="开始" />
            <AppBarButton Click="btnPause_Click"
                          Foreground="White"
                          Icon="Pause"
                          IsEnabled="{x:Bind DownloadingVM.IsEnablePause, Mode=OneWay}"
                          Label="暂停" />
            <AppBarButton Click="btnRemove_Click"
                          Foreground="White"
                          Icon="Delete"
                          IsEnabled="{x:Bind DownloadingVM.IsEnableRemove, Mode=OneWay}"
                          Label="移除" />
            <AppBarButton x:Name="btnSelectAll"
                          Click="btnSelectAll_Click"
                          Foreground="White"
                          Icon="SelectAll"
                          Label="选择" />
        </CommandBar>
    </Grid>

</Page>
