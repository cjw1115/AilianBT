<Application x:Class="AilianBT.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:AilianBT.ViewModels"
             RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Styles/Brushes.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/ItemsControls.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/InputControls.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/Buttons.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <vm:ViewModelLocator x:Key="Locator" />
            <ResourceDictionary x:Key="ThemeColors">
                <Color x:Key="少女粉">#FFE777AB</Color>
                <Color x:Key="落日黄">#FFFF9923</Color>
                <Color x:Key="橄榄绿">#FF32B434</Color>
                <Color x:Key="烟波蓝">#FF1D91FF</Color>
                <Color x:Key="浪漫紫">#FFBE3CFD</Color>
            </ResourceDictionary>

            <x:String x:Key="FontAwesome">/Assets/Fonts/fontawesome-webfont.ttf#FontAwesome</x:String>
        </ResourceDictionary>
    </Application.Resources>
</Application>
